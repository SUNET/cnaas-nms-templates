interfaces {
    irb {
        unit 10 {
            family inet {
                address {{ mgmt_ipif }}/{{ underlay.mgmt_lo_net.split("/")[1] }} preferred;
            }
        }
    }
}

routing-instances {
    MGMT {
        instance-type vrf;
        routing-options {
            multipath;
            auto-export;
        }
        protocols {
            evpn {
                ip-prefix-routes {
                    advertise direct-nexthop;
                    encapsulation vxlan;
                    vni 10010;
                }
            }
        }
        vtep-source-interface lo0.0;
        interface irb.10;
        route-distinguisher {{ infra_ip }}:10010;
        vrf-target target:{{ asn }}L:10010;
        import target:10:10010;
        export target:10:10010;
    }
}

vlans {
    MGMT {
        vlan-id 10;
        l3-interface irb.10;
        vxlan {
            vni 10;
        }
    }
}